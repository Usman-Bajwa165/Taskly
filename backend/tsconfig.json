{
  "compilerOptions": 
  {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
    "include": ["src/**/*", "api/**/*", "tests/**/*", "jest.config.ts"],
    "exclude": ["node_modules", "dist"]
}
